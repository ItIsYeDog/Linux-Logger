<!DOCTYPE html>
<html>
<head>
    <title>System Logs</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="logs-container">
        <div class="header-section">
            <h1>System Logs</h1>
            <a href="/dashboard" class="nav-link">‚Üê Tilbake til Dashboard</a>
        </div>
        
        <div class="tab-container">
            <button class="tab active" onclick="showTab('warnings')">Advarsler</button>
            <button class="tab" onclick="showTab('summary')">System Oppsummering</button>
        </div>

        <div id="warnings" class="log-content active">
            <div class="log-section">
                <h2>System Advarsler</h2>
                <% errors.filter(log => log.level === 'warn').forEach(log => { %>
                    <div class="log-entry <%= log.message.includes('High CPU') ? 'cpu-warning' : 
                                           log.message.includes('High Memory') ? 'memory-warning' : 
                                           log.message.includes('High Disk') ? 'disk-warning' : '' %>">
                        <div class="log-header">
                            <span class="timestamp"><%= new Date(log.timestamp).toLocaleString() %></span>
                            <span class="warning-type"><%= log.message %></span>
                        </div>
                        <div class="log-details">
                            <% Object.entries(log).forEach(([key, value]) => { 
                                if (key !== 'timestamp' && key !== 'level' && key !== 'message') { %>
                                <p><strong><%= key %>:</strong> <%= value %></p>
                            <% }}) %>
                        </div>
                    </div>
                <% }); %>
                <% if (errors.filter(log => log.level === 'warn').length === 0) { %>
                    <p class="no-logs">Ingen advarsler registrert</p>
                <% } %>
            </div>
        </div>

        <div id="summary" class="log-content">
            <div class="log-section">
                <h2>System Oppsummering</h2>
                <% metrics.filter(log => log.message === 'System Metrics Summary').forEach(log => { %>
                    <div class="log-entry summary">
                        <div class="log-header">
                            <span class="timestamp"><%= new Date(log.timestamp).toLocaleString() %></span>
                        </div>
                        <div class="log-details">
                            <p><strong>CPU Belastning:</strong> <%= log.cpuLoad %></p>
                            <p><strong>Minnebruk:</strong> <%= log.memoryUsed %></p>
                            <p><strong>Oppetid:</strong> <%= log.uptime %></p>
                        </div>
                    </div>
                <% }); %>
                <% if (metrics.filter(log => log.message === 'System Metrics Summary').length === 0) { %>
                    <p class="no-logs">Ingen oppsummeringer tilgjengelig</p>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        function showTab(tabName) {
            document.querySelectorAll('.log-content').forEach(content => {
                content.classList.remove('active');
            });
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }
    </script>
</body>
</html>